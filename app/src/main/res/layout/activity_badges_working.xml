<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.please.khs.shower.Main.BadgeActivity">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:scale_base_width="200"
        app:scale_base_height="300">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical"
            app:scale_width="200"
            app:scale_height="300">

            <LinearLayout
                android:id="@+id/frontbdg_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/badge_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/basemedal" />

                <TextView
                    android:id="@+id/tv_badge_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="최고 메모 마스터"
                    android:textSize="20sp"
                    android:fontFamily="@font/nanumsquareb"
                    android:textAlignment="center"
                    android:textColor="#FC8C94" />

                <TextView
                    android:id="@+id/tv_badge_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:fontFamily="@font/nanumsquarer"
                    android:text="일주일동안~" />

                <Button
                    android:layout_marginTop="15dp"
                    android:id="@+id/bt_main_badge_change"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:backgroundTint="#FC8C94"
                    android:fontFamily="@font/nanumsquarer"
                    android:text="대표 뱃지 변경"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/newbdg_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:id="@+id/topbar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FF7A83"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/thirtynew" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="새로운 뱃지"
                        android:textColor="#FFFFFF" />


                    <ImageButton
                        android:id="@+id/bt_newBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/twentydown" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/bge_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:src="@drawable/basemedal" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/basemedal" />
                    </TableLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/collectbdg_layout"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/topbar_layout2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#FF7A83"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/thirtychk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/thirtychk" />

                        <TextView
                            android:id="@+id/collectbge_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="보유한 뱃지"
                            android:textColor="#FFFFFF" />

                        <ImageButton
                            android:id="@+id/imageButton2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            app:srcCompat="@drawable/twentydown" />

                    </LinearLayout>


                    <TableLayout
                        android:id="@+id/bdg_layout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                    </TableLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </com.ssomai.android.scalablelayout.ScalableLayout>


</android.support.constraint.ConstraintLayout>