<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.please.khs.shower">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".SONAGIGlobalClass"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/fsonagi_logo"
        android:label="SONAGI"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppThemeNoActionBar">
        <activity android:name=".StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".Main.GraphActivity"
            android:theme="@style/AppBarTheme" />
        <activity android:name=".SignUpActivity.SignUp1Activity" />
        <activity android:name=".SignUpActivity.SignUp2Activity" />
        <activity android:name=".Main.badgesActivity" />
        <activity android:name=".Request.UserName" />
        <activity android:name=".Rainny" />
        <activity android:name=".Tutorial.Tutorial1" />
        <activity android:name=".Fragment_main" />
        <activity android:name=".Tutorial.Tutorial6" />
        <activity android:name=".ComingSoon" />
        <activity android:name=".MemoActivity" />

        <service
            android:name=".SONAGIService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".SoftKeyboard"
            android:permission="android.permission.BIND_INPUT_METHOD">
            <intent-filter>
                <action android:name="android.view.InputMethod" />
                <action android:name="TOGGLE" />
            </intent-filter>

            <meta-data
                android:name="android.view.im"
                android:resource="@xml/method" />
        </service>

        <activity android:name=".Actionbar" />
        <activity android:name=".Setting" />
        <activity
            android:name=".Slide"
            android:label="@string/title_activity_slide"></activity>
    </application>

</manifest>